<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css') }}">
        {% endblock %}
    </head>
    <body>
        {% block body %}

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="#">OFICINA</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-item nav-link active" href="{{ path('estudiantes_listar_colegio') }}">ESTUDIANTES<span class="sr-only">(current)</span></a>
                        <a class="nav-item nav-link" href="{{ path('docentes_listar_colegio') }}">DOCENTES</a>
                        <a class="nav-item nav-link" href="{{ path('aulas_listar_colegio') }}">AULAS</a>
                        <a class="nav-item nav-link" href="{{ path('torres_listar_colegio') }}">TORRES</a>
                        <a class="nav-item nav-link" href="{{ path('asignaciones_listar_colegio') }}">ASIGNACIONES</a>
                        <a class="nav-item nav-link" href="{{ path('matriculas_listar_colegio') }}">MATRICULAS</a>
                    </div>
                </div>
            </nav>

            {% for message in app.flashes('mensaje') %}
                <div class="alert alert-dismissible alert-success" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <div class="container">{{ message }}</div>
                </div>
            {% endfor %}
        {% endblock %}
        {% block javascripts %}
            <script
                    src="https://code.jquery.com/jquery-3.5.1.js"
                    integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
                    crossorigin="anonymous"></script>
            <script language="javascript" src="{{ asset('https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js')}}"></script>
            <script language="javascript" src="{{ asset('https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js')}}"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>
        {% endblock %}
    </body>
</html>
